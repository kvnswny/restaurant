<br>
<form action="/meal" method="POST">
<table style="50%">
<caption>Regular
  <tr>
    <th>Name</th>
    <th>Price</th>
  </tr>
  <% @menu.each do |item| %>
  <% if item[:veg] == false %>
  <tr><td><%= item.name %></td><td> $<%= item.price / 100 %></td><td> <input type="number"></td></tr>
  <% end %>
  <% end %>
</table>

<br>

<ul>Vegetarian
  <% @menu.each do |item| %>
  <% if item[:veg] == true %>
  <li><%= item.name %> $<%= item.price / 100 %> <input type="number"></li>
  <% end %>
  <% end %>
</ul>
</form>
