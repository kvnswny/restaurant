<h1>Order for the <%= @party.name %> party (Party # <%= @party.id %>)</h1>

<table style="50%">
  <caption>
  <tr> <th>Name</th> <th>Price</th> <th>#</th> <th>Order</th></tr>
  <% @foods.each do |food| %>
      <tr>
        <form action="/orders" method="post">
        <td><%= food.name %></td>
        <td><%= food.price / 100 %></td>
        <td><%= food.id %></td>
        <input type="hidden" name="order[party_id]" value="<%= @party.id %>">
        <input type="hidden" name="order[food_id]" value="<%= food.id %>">
        <td><input type="submit"></td>
        </form>
      </tr>
  <% end %>
</table>
<br>
<caption>

<% @counts = Hash.new(0) %>
<% @cart.each do |item|
   @counts[item] += 1
   end %>

<table style="50%">
  <caption>
  <% @cart.uniq.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= @counts[item] %></td>
      <td><%= item.price * @counts[item] / 100 %></td>
    </tr>
  <% end %>
    <tfoot>
      <td>Total</td>
      <td></td>
      <td>$<%= @cart.sum(:price) / 100 %></td>
    </tfoot>
</table>
